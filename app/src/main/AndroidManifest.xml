<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.akiraagusta.android_todo">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:requestLegacyExternalStorage="true"
        android:name="com.akiraagusta.android_todo.Starter"
        android:screenOrientation="portrait"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/BenjolTheme"
        android:usesCleartextTraffic="true">
        <activity android:name="com.akiraagusta.android_todo.view.RegisterActivity" />
        <activity android:name="com.akiraagusta.android_todo.view.DashboardActivity" />
        <activity android:name="com.akiraagusta.android_todo.view.ProfileActivity" />
        <activity android:name="com.akiraagusta.android_todo.view.UploadProfileImageActivity"/>
        <activity android:name="com.akiraagusta.android_todo.view.EditProfileActivity" />
        <activity android:name="com.akiraagusta.android_todo.view.AddTaskActivity" />
        <activity android:name="com.akiraagusta.android_todo.view.EditTaskActivity" />
        <activity android:name="com.akiraagusta.android_todo.view.ChangePasswordActivity"/>
        <activity android:name="com.akiraagusta.android_todo.view.LoginActivity"/>
        <activity android:name="com.akiraagusta.android_todo.view.MainActivity"/>
        <activity android:name="com.akiraagusta.android_todo.view.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>